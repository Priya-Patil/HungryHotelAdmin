<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:elevation="28dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civDIshImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:src="@drawable/food"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/civDIshImage"
            android:layout_centerVertical="true"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                >


            <TextView
                android:id="@+id/tvDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textColor="@color/darkGray"
                android:text="Sev bhaji"
                android:textSize="20dp"
                android:fontFamily="@font/ptserif_regular"
                android:layout_toLeftOf="@+id/ivNonvegDishType"
                android:layout_centerVertical="true"
                />


                <ImageView
                    android:id="@+id/ivDishType"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:src="@drawable/vegimg"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivDishEdit"

                    />

                <ImageView
                    android:id="@+id/ivNonvegDishType"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:src="@drawable/vegimg"
                    android:tint="@color/red"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivDishEdit"

                    />

                <ImageView
                    android:id="@+id/ivDishEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_mode_edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/tvDishQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="2dp"
                android:textColor="@color/darkGray"
                android:text=" 2 items"
                android:textSize="15dp"
                android:fontFamily="@font/ptserif_regular"

                />

            <TextView
                android:id="@+id/tvDishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/darkGray"
                android:text="Rs. 80.00"
                android:textSize="15dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/ptserif_regular"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/darkGray"
                android:textSize="15dp"
                android:text="11.00 am to 02.00 pm"
                android:fontFamily="@font/ptserif_regular"
                />

                <TextView
                    android:id="@+id/tvDishShown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textSize="15dp"
                    android:text="hidden"
                    android:gravity="right"
                    android:layout_marginRight="3dp"
                    android:padding="4dp"
                    />

            </LinearLayout>



        </LinearLayout>




    </RelativeLayout>


</androidx.cardview.widget.CardView>