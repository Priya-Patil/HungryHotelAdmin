<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".menudetails.AddUpdateMenuFragment">

    <Button
        android:id="@+id/btnAddDish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/darkGreen"
        android:textColor="@color/white"
        android:fontFamily="@font/ptserif_bold"
        android:text="Save Dish" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnAddDish"
        android:layout_alignParentTop="true"
        android:orientation="vertical">



            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEditMenuLabel"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/ptserif_bold"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:text="Enter Menu Details"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvActivateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Is shown"
                        android:layout_alignParentLeft="true"
                        android:textDirection="ltr"
                        android:textStyle="bold" />

                    <Switch
                        android:layout_alignParentRight="true"
                        android:id="@+id/swIsShown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDishName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="15dp">

                    <EditText
                        android:id="@+id/etDishName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Dish Name" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDishAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="15dp">

                    <EditText
                        android:id="@+id/etDishAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Dish Amount"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border_bottom_black">

                    <Spinner
                        android:id="@+id/spDishType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />


                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDishQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="15dp">

                    <EditText
                        android:id="@+id/etDishQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dish Quantity" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDishDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="15dp">

                    <EditText
                        android:id="@+id/etDishDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/border_bottom_black">

                    <Spinner
                        android:id="@+id/spDishCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStartTimeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Start Time"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textDirection="ltr"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/etStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/ic_calendar_24dp"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:hint="Start Time"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvEndTimeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="End Time"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textDirection="ltr"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/etEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/ic_calendar_24dp"
                            android:enabled="false"
                            android:gravity="center_vertical"
                            android:hint="End Time"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


    </ScrollView>
</RelativeLayout>